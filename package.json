{
  "name": "setup-nodejs",
  "version": "0.0.1",
  "description": "setup node.js",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --exit-child -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules src/server.ts",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "lint": "eslint .",
    "test": "jest",
    "coverage": "jest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaiconGilton/setup-nodejs.git"
  },
  "keywords": [
    "Node.js",
    "Express.js",
    "Typescript",
    "Eslint",
    "Docker",
    "Jest",
    "Github",
    "Actions",
    "CI/CD"
  ],
  "author": "Maicon Gilton <maicongilton@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MaiconGilton/setup-nodejs/issues"
  },
  "homepage": "https://github.com/MaiconGilton/setup-nodejs#readme",
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.2",
    "@babel/node": "^7.22.19",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-typescript": "^7.23.2",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.7.5",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^29.7.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "*"
  }
}
